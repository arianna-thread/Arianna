<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/point_of_interest_detail_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:contentDescription="@string/point_of_interest_detail_img_desc"
            android:height="0dp"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/actionBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/point_of_interest_detail_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/paddinfRightTitle"
                android:singleLine="true"
                android:textSize="@dimen/dashboard_title" />

            <ImageButton
                android:id="@+id/set_current_poi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:onClick="onSetCurrentPoi"
                android:src="@drawable/checkin" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/actionBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:height="0dp"
            android:orientation="vertical" >

            <!-- <Button -->
            <!-- android:id="@+id/set_current_poi" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:gravity="right" -->
            <!-- android:onClick="onSetCurrentPoi" -->
            <!-- android:src="@drawable/ic_arrow" -->
            <!-- android:text="@string/set_current_poi" /> -->

            <TextView
                android:id="@+id/point_of_interest_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/textPadding"
                android:textSize="@dimen/textDetail" />
                 />
        </LinearLayout>
    </LinearLayout>

</ScrollView>