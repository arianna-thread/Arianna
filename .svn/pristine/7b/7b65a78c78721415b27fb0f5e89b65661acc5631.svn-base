<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/point_of_interest_detail_img"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:contentDescription="@string/point_of_interest_detail_img_desc" />

        <TextView
            android:id="@+id/point_of_interest_detail_name"
            android:layout_width="match_parent"
            android:layout_height="48dp" 
            android:background="@drawable/shadow2"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:textColor="#BFBFBF"
            android:textSize="@dimen/dashboard_title" />
        
        <Button
            android:id="@+id/set_current_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_current_poi" 
            android:onClick="onSetCurrentPoi"
            android:gravity="right"
            android:src="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/point_of_interest_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="128dp" />
    </LinearLayout>

</ScrollView>